<?xml version="1.0" encoding="utf-8"?>
 <selector
 xmlns:android="http://schemas.android.com/apk/res/android">

 <item android:state_pressed="true" >
<shape android:shape="rectangle">
    <solid
        android:color="#333333" />
    <stroke
        android:width="5dp"
        android:color="#EAEAEA"
        android:dashWidth="3dp"
        android:dashGap="2dp" />
</shape>
</item>

<item android:state_focused="true" >
<shape>
    <gradient
        android:endColor="#EEF3F6"
        android:startColor="#F8FCFD"
        android:centerX="0.5"
        android:centerY="0.5"
        android:angle="270" />
    
    <stroke   android:width="2dp" android:color="#333333" />
    <corners  android:radius="4dp" />
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
</item>
 <item>        
 <shape>
     <gradient
         android:endColor="#EEF3F6"
         android:startColor="#F8FCFD"
        android:angle="270" />
     <stroke   android:width="2dp" android:color="#333333" />
     
     <corners android:radius="4dp" />
   </shape>
   </item>
  </selector>