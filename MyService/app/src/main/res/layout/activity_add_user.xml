<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.myservice.view.activity.AddUserActivity"
    android:background="@drawable/bg_main_screen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/form_block"
            android:background="@drawable/linear_rounded_shape"
            android:padding="25dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@drawable/gray_button"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="@string/nome"
                    android:ems="10"
                    android:id="@+id/nome_txt" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="@string/sobrenome"
                    android:ems="10"
                    android:id="@+id/sobrenome_txt" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:hint="@string/password"
                    android:ems="10"
                    android:id="@+id/senha_txt" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="@string/email"
                    android:ems="10"
                    android:id="@+id/email_txt"
                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:hint="@string/celular"
                    android:ems="10"
                    android:id="@+id/celular_txt" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:hint="@string/telefone_fixo"
                    android:id="@+id/fixo_txt" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/endereco_txt"
                    android:hint="@string/endereco" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/cidade"
                    android:ems="10"
                    android:id="@+id/cidade_txt"        />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/estado_txt"
                    android:hint="@string/estado" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:background="@drawable/gray_button"
            style="@style/Button_12_Blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel_btn"
            android:id="@+id/cancel_btn"
            android:layout_below="@+id/form_block"
            android:layout_alignParentLeft="true"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok_btn"
            android:background="@drawable/gray_button"
            style="@style/Button_12_Blue"
            android:id="@+id/ok_btn"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/form_block"/>

    </RelativeLayout>

</ScrollView>

