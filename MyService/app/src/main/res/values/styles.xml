<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.BlueActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/dark_blue</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Button_12_Blue">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text_25">
        <item name="android:textColor">@color/preto</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Text_25_White">
        <item name="android:textColor">@color/branco</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Text_12">
        <item name="android:textColor">@color/preto</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ToolBar_EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/cinza</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

</resources>
